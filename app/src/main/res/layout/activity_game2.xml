<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background2"
    android:orientation="vertical"
    tools:context=".GameActivity2">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/titleText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/sitka"
            android:text="Guessing Game"
            android:textSize="35sp"
            android:layout_marginTop="50dp"
            android:layout_marginLeft="80dp"
            android:textColor="@color/black"/>
        <TextView
            android:id="@+id/inBetweenText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/sitka"
            android:text="In Between"
            android:textSize="15sp"
            android:textStyle="bold"
            android:layout_marginTop="100dp"
            android:layout_marginLeft="160dp"
            android:textColor="@color/black"/>
        <ImageView
            android:id="@+id/cardOne"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="300dp"
            android:layout_marginLeft="40dp"/>

        <TextView
            android:id="@+id/firstCard"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="FirstCard"
            android:layout_marginTop="425dp"
            android:layout_marginLeft="58dp"
            android:textSoze="40sp"
            android:textStyle="bold"/>

<!--        Secondcard-->
        <ImageView
            android:id="@+id/CardTwo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="300dp"
            android:layout_marginLeft="270dp"/>

        <TextView
            android:id="@+id/secondCard"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Second Card"
            android:textStyle="bold"
            android:layout_marginTop="425dp"
            android:layout_marginLeft="280dp"/>
        <TextView
            android:id="@+id/thirdCard"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Third Card"
            android:layout_marginTop="425dp"
            android:layout_marginLeft="175dp"
            android:textStyle="bold"/>

        <Button
            android:id="@+id/lowerButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Lower"
            android:layout_marginTop="450dp"
            android:layout_marginLeft="50dp"/>
        <Button
            android:id="@+id/higherButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Higher"
            android:layout_marginTop="450dp"
            android:layout_marginLeft="275dp"/>
        <Button
            android:id="@+id/startButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="START"
            android:layout_marginTop="500dp"
            android:layout_marginLeft="160dp"/>

<!--        Third Card-->
        <ImageView
            android:id="@+id/cardThree"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="300dp"
            android:layout_marginLeft="160dp"/>


<!--        Higher/Lower/Win/Lose-->
        <TextView
            android:id="@+id/highLowText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Higher or lower?"
            android:layout_marginTop="460dp"
            android:layout_marginLeft="145dp"
            android:textColor="@color/black"
            android:fontFamily="serif"
            android:textStyle="bold"/>
        <TextView
            android:id="@+id/winText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="You win!"
            android:layout_marginTop="460dp"
            android:layout_marginLeft="175dp"
            android:fontFamily="serif"
            android:textStyle="bold"
            android:textColor="@color/green"/>
        <TextView
            android:id="@+id/loseText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="You lose!"
            android:layout_marginTop="460dp"
            android:layout_marginLeft="175dp"
            android:fontFamily="serif"
            android:textStyle="bold"
            android:textColor="@color/red"/>

        <TextView
            android:id="@+id/chipsText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Chips: "
            android:textSize="25sp"
            android:layout_marginTop="650dp"
            android:layout_marginLeft="25dp"
            android:fontFamily="@font/sitka"/>

        <TextView
            android:id="@+id/chipNumberText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="650dp"
            android:layout_marginLeft="110dp"
            android:textSize="25sp"/>

<!--Guess sa third card-->
        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/startButton"
            android:layout_centerInParent="true"
            android:layout_marginLeft="130dp"
            android:hint="Enter your guess"
            android:textColor="@color/black"
            android:textSize="20sp" />

    </RelativeLayout>

</RelativeLayout>